<odoo>

  <!-- views-->

  <record id="view_form_computed_purchase_order" model="ir.ui.view">
    <field name="name">view_form_computed_purchase_order</field>
    <field name="model">computed.purchase.order</field>
    <field name="arch" type="xml">
      <form>

        <group>
          <field name="supplier_id" />
          <field name="order_date" />
        </group>

        <field name="order_line_ids">
          <tree editable="top">
            <field name="name"/>
            <field name="category_id"/>
            <field name="stock_qty"/>
            <field name="uom_id"/>
            <field name="average_consumption"/>
            <field name="stock_coverage"/>
            <field name="purchase_quantity"/>
            <field name="uom_po_id"/>
          </tree>
        </field>

      </form>
    </field>
  </record>


  <!-- Menu item -->

  <record id="action_computed_purchase_order" model="ir.actions.act_window">
      <field name="name">Computed Purchase Orders</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">computed.purchase.order</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" eval="view_form_computed_purchase_order"/>
      <!--<field name="context">{'search_default_filter_purchase_ok': 1}</field>-->
  </record>

  <menuitem id="computed_purchase_order"
    parent="purchase.menu_procurement_management"
    action="action_computed_purchase_order"/>

</odoo>
