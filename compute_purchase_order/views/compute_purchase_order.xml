<odoo>

<record id="view_form_purchase_order" model="ir.ui.view">
    <field name="name">view_form_purchase_order</field>
    <field name="model">computed.purchase.order</field>
    <field name="arch" type="xml">
      <form>

        <group>
          <field name="order_date" />
          <field name="supplier_id" />
        </group>

        <field name="order_line_ids">
          <tree editable="top">
            <field name="name"/>
            <field name="category_id"/>
            <field name="stock_qty"/>
            <field name="uom_id"/>
            <field name="average_consumption"/>
            <field name="stock_coverage"/>
            <field name="purchase_quantity"/>
            <field name="uom_po_id"/>
          </tree>
        </field>

      </form>
    </field>
  </record>

  <act_window id="action_view_form_purchase_order"
              name="Compute purchase order"
              src_model="product.template"
              res_model="computed.purchase.order"
              view_mode="form"
              view_id="view_form_purchase_order"
              target="new"
              key2="client_action_multi"
    />

</odoo>
